
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "incremental": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test",
    "vitest.config.ts"
  ]
}
